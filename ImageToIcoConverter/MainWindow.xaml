<Window
    x:Class="ImageToIcoConverter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="图片转ICO工具">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt" />
    </Window.SystemBackdrop>
    
    <Grid Padding="20">
        <!-- 顶部操作栏 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="10">
            <Button x:Name="BtnSelectImage" Content="选择图片" Click="BtnSelectImage_Click" Width="120" Height="40"/>
            <Button x:Name="BtnSaveIco" Content="保存ICO" Click="BtnSaveIco_Click" Width="120" Height="40" IsEnabled="False"/>
        </StackPanel>

        <!-- 尺寸选择区域 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" Width="200">
            <TextBlock Text="选择ICO尺寸 (可多选)" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            <CheckBox x:Name="Cb16x16" Content="16×16" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
            <CheckBox x:Name="Cb32x32" Content="32×32" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
            <CheckBox x:Name="Cb48x48" Content="48×48" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
            <CheckBox x:Name="Cb64x64" Content="64×64" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
            <CheckBox x:Name="Cb128x128" Content="128×128" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
            <CheckBox x:Name="Cb256x256" Content="256×256" Checked="IcoSize_Checked" Unchecked="IcoSize_Unchecked"/>
        </StackPanel>

        <!-- 图片预览区域 -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="500">
            <!-- 左侧原图片 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 原图片容器 -->
            <Border Grid.Column="0" BorderThickness="2" CornerRadius="4">
                <Grid>
                    <Image x:Name="ImgOriginal" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtNoOriginal" Text="未选择图片" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontSize="16"/>
                </Grid>
            </Border>

            <!-- 右侧ICO预览容器 -->
            <Border Grid.Column="2" BorderThickness="2" CornerRadius="4">
                <Grid>
                    <Image x:Name="ImgIcoPreview" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TxtNoIco" Text="无ICO预览" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontSize="16"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>